<p id="notice"><%= notice %></p>
<h1>This many cats: <%= @cats_in_html %> </h1>

<div>
  <%= while (@cats_in_html != 0) do %>
      <img src='http://4.bp.blogspot.com/--jW1nEPU8mM/U0A2n9S6dXI/AAAAAAAAF_Y/BH-52V2AWrw/s1600/kitty1.gif'/>
      <h1>cat number: <%= @cats_in_html %></h1>
  <% @cats_in_html = @cats_in_html - 1
     end %>

</div>

<h1>  <%= @warning %> </h1>
<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.text %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
